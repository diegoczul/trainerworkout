/* ======     MAIN - NAV  
============================*/


/*******   Layout  ********/

.main_header {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 72px;
	display: flex;
	align-items: center;
}

.content {
	background: url("/img/Trainee/background.png");
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    min-height: 100vh;
    overflow-y: scroll;
}

.contentContainer {
	max-width: 1300px;
	margin: 0 auto;
	width: 100%;
}

nav {
	display: flex;
	width: 100%;
}

.navItem {
	display: flex;
	align-items:center;
	width: 33%
}

.headerMenu svg {
	margin: auto auto auto 0;
}

#headerLogo {
	text-align: center;
	display: inline-flex;
}

#headerLogo svg {
	margin: auto;
}


.navOptions {
	display: flex;
	justify-content: flex-end;
}

.navOptions button {
	height: 35px;
	margin: 0;
	background-color: #52D2B0;
	box-shadow: 0 3px 0 #28AD86;
	transition: .2s ease-in;
  position: relative;
}

.navOptions button a {
  color: #fff;
  text-decoration: none;
  width: 100%;
  height: 100%;
  font-size: 14px;
  font-weight: lighter;
}

.navOptions button:active, 
.navOptions button:focus{
	transform: translateY(2px);
	box-shadow: 0 1px 0 #28AD86;
}

.navLang {
	display: inline-flex;
	margin-left: 10px;
}

.navLang span {
	padding: 0 5px;
}

.navLang span,
.navLang a {
	margin-bottom: auto;
	margin-top: auto;
	color: #fff;
	text-decoration: none;
}


nav:first-child {
	padding-left: 21px;
}

nav:last-child {
	padding-right: 21px;
}

#c-menu--push-left {
	flex-direction: column;
}

/*******   Styling  ********/

