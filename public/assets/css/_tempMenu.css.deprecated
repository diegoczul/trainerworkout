/* ------------------------------------------------

  WRAPPER OBJECT

--------------------------------------------------- */
.o-wrapper {
	overflow: hidden;
  -webkit-transition: -webkit-transform 0.3s;
          transition: transform 0.3s;
}


/* ------------------------------------------------

  SLIDE AND PUSH MENUS COMPONENT
  
--------------------------------------------------- */

.c-menu {
	position: fixed;
	z-index: 200;
	background: rgba(44,62,80,0.90);
	box-shadow: -2px 0px 4px 0px rgba(0,0,0,0.40);
	-webkit-transition: -webkit-transform 0.3s;
	        transition: transform 0.3s;
}

.c-menu__items {
  list-style: none;
  margin: 0;
  padding: 0;
}

.c-menu--push-left,
.c-menu--push-right {
  width: 100%;
  height: 100vh;
  overflow-y: scroll;
}
@media all and (min-width: 320px) {
  .c-menu--push-left,
  .c-menu--push-right {
    width: 300px;
  }
}

.c-menu--push-left .c-menu__item,
.c-menu--push-right .c-menu__item {
  display: block;
  text-align: center;
  border-top: solid 1px rgba(255, 255, 255, 0.1);
  margin-left: 10px;
  margin-right: 10px;
}

.c-menu--push-left .c-menu__item:first-child,
.c-menu--push-right .c-menu__item:last-child {
   border-top: none;
}

.c-menu--push-left .c-menu__link,
.c-menu--push-right .c-menu__link {
	font-size: 18px;
	color: #FFF;
	line-height: 24px;
	padding: 18px 20px ;
	text-decoration: none;
	display: block;
	text-align: left;
}

.c-menu--push-left .c-menu__close,
.c-menu--push-right .c-menu__close {
    position: absolute;
    top: 12px;
    right: 12px;
}

/**
 * Slide/Push Menu Left.
 */

.c-menu--push-left {
  top: 0;
  left: 0;
  -webkit-transform: translateX(-100%);
      -ms-transform: translateX(-100%);
          transform: translateX(-100%);
}
@media all and (min-width: 320px) {
  .c-menu--push-left {
    -webkit-transform: translateX(-300px);
        -ms-transform: translateX(-300px);
            transform: translateX(-300px);
  }
}

.c-menu--push-left.is-active {
  -webkit-transform: translateX(0);
      -ms-transform: translateX(0);
          transform: translateX(0);
}

/**
 * Slide/Push Menu Right.
 */
.c-menu--push-right {
  top: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  -webkit-transform: translateX(100%);
      -ms-transform: translateX(100%);
          transform: translateX(100%);
}

@media all and (min-width: 320px) {

  .c-menu--push-right {
    -webkit-transform: translateX(310px);
        -ms-transform: translateX(310px);
            transform: translateX(310px);
  }
}

.c-menu--push-right.is-active {
  -webkit-transform: translateX(0);
      -ms-transform: translateX(0);
          transform: translateX(0);
}

/**
 * Wrapper states.
 *
 * Various wrapper states occur depending on if a menu is pushing into view, in
 * which case, the wrapper has to be pushed by the respective distance.
 */

 .o-wrapper.has-push-left {
  -webkit-transform: translateX(100%);
      -ms-transform: translateX(100%);
          transform: translateX(100%);
}
@media all and (min-width: 320px) {
  .o-wrapper.has-push-left {
    -webkit-transform: translateX(300px);
        -ms-transform: translateX(300px);
            transform: translateX(300px);
  }
}

.o-wrapper.has-push-right {
  -webkit-transform: translateX(-100%);
      -ms-transform: translateX(-100%);
          transform: translateX(-100%);
}
@media all and (min-width: 320px) {
  .o-wrapper.has-push-right {
    -webkit-transform: translateX(-300px);
        -ms-transform: translateX(-300px);
            transform: translateX(-300px);
  }
}

/**
 * Body states.
 *
 * When a menu is active, we want to hide the overflows on the body to prevent
 * awkward document scrolling.
 */
body.has-active-menu {
  overflow: hidden;
}


/* ----------------------------------

  MASK COMPONENT
  
------------------------------------- */
.c-mask {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  overflow: hidden;
  width: 0;
  height: 0;
  background-color: rgba(0,0,0,0.70);
  backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  opacity: 0;
  -webkit-transition: opacity 0.3s, width 0s 0.3s, height 0s 0.3s;
          transition: opacity 0.3s, width 0s 0.3s, height 0s 0.3s;
}

.c-mask.is-active {
  width: 100%;
  height: 100%;
  opacity: 0.7;
  -webkit-transition: opacity 0.7s;
          transition: opacity 0.7s;
}



/* Button */

button {
  background: #369AD8;
  border-radius: 2px;
  border: none;
      -webkit-box-shadow: 0 3px 0 #1E6B9B, 0 15px 20px rgba(0, 0, 0, .35);
  -moz-box-shadow: 0 3px 0 #1E6B9B, 0 15px 20px rgba(0, 0, 0, .35);
  box-shadow: 0 3px 0 #1E6B9B, 0 15px 20px rgba(0, 0, 0, .35);
  min-width: 120px;
  height: 40px;
/*  margin: auto;
  margin-top: 30px;*/
}

button:active, button:focus {
    -webkit-box-shadow:    0 1px 0 #1E6B9B, 0 12px 10px rgba(0, 0, 0, .3);
    -moz-box-shadow: 0 1px 0 #1E6B9B, 0 12px 10px rgba(0, 0, 0, .3);
    box-shadow:    0 1px 0 #1E6B9B, 0 12px 10px rgba(0, 0, 0, .3);
}

button:active {
    -webkit-transform: translate(0, 2px);
    -moz-transform: translate(0, 2px);
    -o-transform: translate(0, 2px);
    transform: translate(0, 2px);
}